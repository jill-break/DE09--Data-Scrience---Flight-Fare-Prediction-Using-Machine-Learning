# Environment variables for Flight Fare Prediction

# Kaggle API Credentials
# Get these from https://www.kaggle.com/settings/account -> Create New API Token
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=flight_fare_prediction

# DVC Configuration
DVC_REMOTE=local

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Model Configuration
MODEL_REGISTRY_PATH=./models
DEFAULT_MODEL=xgboost

# Data Paths
DATA_RAW_PATH=./data/01-raw
DATA_PREPROCESSED_PATH=./data/02-preprocessed
DATA_FEATURES_PATH=./data/03-features
DATA_PREDICTIONS_PATH=./data/04-predictions
